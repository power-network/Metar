<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_book"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@color/txt_red" />

        <TextView
            android:id="@+id/tv_book_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_book"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_book"
            android:background="@color/txt_red"
            android:text="热卖"
            android:textColor="@color/colorWhite"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/tv_book_hot"
            android:text="@string/app_name"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_book_hao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_book_hot"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@id/iv_book"
            android:text="好评度:"
            android:textSize="10sp" />

        <RatingBar
            android:id="@+id/ratingbar"
            style="@style/MyRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_book_hao"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_book_hao"
            android:isIndicator="true"
            android:numStars="5" />

        <TextView
            android:id="@+id/tv_book_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_book_hao"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/iv_book"
            android:text="¥79.00"
            android:textColor="@color/txt_red" />
    </RelativeLayout>
</android.support.v7.widget.CardView>