<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_kc"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_kc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_kc"
            android:layout_toRightOf="@id/iv_kc"
            android:text="@string/shop"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/tv_kc_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_kc_title"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/iv_kc"
            android:background="@drawable/bg_top"
            android:text="最新"
            android:textColor="@color/txt_red"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_kc_keshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_kc"
            android:layout_toRightOf="@id/iv_kc"
            android:drawableLeft="@mipmap/icon_keshi"
            android:drawablePadding="5dp"
            android:text="64课时"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_kc_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/tv_kc_keshi"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:text="%11990.00"
            android:textColor="@color/txt_red" />
    </RelativeLayout>

</android.support.v7.widget.CardView>