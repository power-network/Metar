<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".me.activity.PersonActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/notab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        >
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorTheme">


            <TextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:text="取消"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorWhite"
                android:gravity="center_vertical"
                android:text="返回"
                android:textSize="15sp"
                android:id="@+id/notice_retu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:drawableLeft="@mipmap/ic_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="个人资料"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="头像"
            android:textColor="@color/txt_33"
            android:textSize="16sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_toLeftOf="@+id/iv_right1"
            android:src="@mipmap/touxiang"
            android:layout_marginRight="15dp"
            android:id="@+id/img_usericon"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/return1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_marginRight="15dp"
            android:id="@+id/iv_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/return1" />

        <View
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_nickname"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="昵称"
            android:textColor="@color/txt_33"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/txt_nickname"
            android:text=""
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/return1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_sex"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="性别"
            android:textColor="@color/txt_33"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/txt_sex"
            android:text="暂无"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/return1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_phone"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="手机号"
            android:textColor="@color/txt_33"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/txt_phone"
            android:text=""
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/return1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_change_pass"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="修改密码"
            android:textColor="@color/txt_33"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="15dp"
            android:id="@+id/txt_change_pass"
            android:text=""
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/return1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_time"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="报考时间"
            android:textColor="@color/txt_33"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="35dp"
            android:id="@+id/txt_time"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_school"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="报考院校"
            android:textColor="@color/txt_33"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="35dp"
            android:id="@+id/txt_school"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <View
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </RelativeLayout>

</LinearLayout>